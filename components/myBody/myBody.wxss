
/* components/body/body.wxss */
.left-body{
  display: flex;

}
.right-body{
  width: 90%;
} 

.particulars{
  display: flex;
}
.particulars-img{
 width: 100%;
 height: 100%; 
  display: flex;
 flex: 1;
 margin: 1rem;
}
.img{
  width: 5rem;
  height: 5rem;

}
.content{
  display: flex;
  flex: 3;
  flex-direction: column;
  margin-top: 2rem;
  justify-self: center;
}

.particulars-price{
  margin-top: 1rem;
 color:red;
}
.borders{
  border:#e8e8e8 0.5px solid;
  margin: 0.5rem;
}
.scoville-body{
  margin-left: 1rem;
}
.scoville{
   display: inline-block !important;
} 
.myclass{
margin-right: 1rem;
margin-top: 1rem;
margin-bottom: 1rem;
}
.nums{
  display: flex;
  flex-direction: row;
  margin: 1rem 0;
 }
.quantity{
  display: flex;
  margin-left: 1rem;
  margin-right: 1rem;
  font-size: 0.8rem;
}
.my-minus{
  display: flex;
  width: 0.5rem !important;
  height: 1.5rem !important;
}
.amount{
 text-align: center;
 justify-content: center;
  display: flex;
  width: 2rem;
}
.my-plus{
  width: 0.5rem !important;
  height: 1.5rem !important;
  display: flex;
}
.sumbit{
  display: flex;
  align-content: center;
  justify-content: center;
}
.sumbitButton{
  margin-top: 1rem;
  height: 2rem !important;
  width: 10rem !important;
}